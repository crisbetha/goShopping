		link(rel='stylesheet' href='stylesheets/bootstrap.min.css')
		link(rel='stylesheet' href='/stylesheets/style.css')
		script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.8/angular.min.js')
